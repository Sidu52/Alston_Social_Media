                                <h5>Alex Qu.</h5>
                                <p class="text-muted">happy birthday..</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ----------------END OF MESSAGES--------------------- -->
            </div>
            <!-- ----------------END-LEFT--------------------- -->

            <!-- ----------------MIDDLE--------------------- -->
            <div class="middle">
                <!-- ----------------STORIES--------------------- -->
                <div class="stories">
                    <% for(use of all_user) { %>
                        <div class="story">
                            <div class="profile-photo">
                                <img src="<%= use.avatar %>">
                            </div>
                            <% if (user.id==use.id) { %>
                                <p class="name">Your Story</p>
                            <% } else { %>
                                <p class="name">
                                    <%= use.name %>
                                </p>
                            <% } %>
                        </div>
                    <% } %>
                </div>
                <!-- ----------------END OF STORY--------------------- -->
                <!-- ---------------- POST --------------------- -->
                <% if (locals.user) { %>
                    <form action="/update/createpost/<%= locals.user.id %>" method="POST" class="create-post" enctype="multipart/form-data">
                        <div class="profile-photo">
                            <img src="<%= user.avatar %>">
                        </div>
                        <div>
                            <label for="file_upload" class="file_upload_icon"><i class="icon uil uil-plus-circle"></i></label>
                            <input type="file" name="postimg" id="file_upload" class="fileupload">
                        </div>
                        <input type="text" name="content" placeholder="What's on your mind, Alston?" id="create-post">
                        <button type="submit" value="Update" class="btn btn-primary">Post</button>
                    </form>
                <% } %>
                <!-- ----------------FEEDS--------------------- -->
                <div class="feeds">
                    <% for(post of posts) { %>
                        <%- include('post'); %>
                    <% } %>
                </div>
