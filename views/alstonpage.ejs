                    </div>
                </div>
                <!-- ----------------CONTACT--------------------- -->
                <div class="contacts">
                    <div class="contact">
                        <h3>Contact</h3>
                        <div>
                            <span><i class="icon uil uil-video"></i></span>
                            <span><i class="icon uil uil-search"></i></span>
                            <span><i class="icon uil uil-ellipsis-h"></i></span>
                        </div>
                    </div>
                    <%= console.log("first",locals.user)%>
                    <% for(let user of all_user){%>
                        <a href="/userprofile/<%= user.id %>">
                            <div class="contact-profile">
                                <div class="profile-photo">
                                    <img src="<%= user.avatar %> " alt="Profile img">
                                </div>
                                <div class="notification-body">
