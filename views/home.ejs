<link rel="stylesheet" href="/css/home.css">
<main>
    <div class="container">
        <!-- -------------------LEFT--------------------- -->
        <div class="left-cont">
            <div class="heading account">
                <h1 class="logo-color"><img src="/favicon.png">Alston</h1>
            <p class="heading-text"><b>Recent logins</b></p>
            <p class="text">Click Alston Profile For Demo.</p>
        </div>
        <div class="accounts">
            <div class="account">
                <a href="#" id="login-link" class="profile-text"><img src="/profile picture.jpg">
                    Alston
               </a>  
            </div>
            <div class="account">
                <a href="/user/singup" class="profile-text"><img src="/login/add-icon-plus-sign-simple-vector-cross-illustration-148041788.jpg">Add Account</a>    
            </div>
        </div>
    </div>
    <!-- ---------------------RIGHT------------------- -->
        <div class="right">
            <form>
                <div class="email">
                    <input type="text" id="email-input" name="email" placeholder="Email address or phone number">
                </div>
                <div class="email password">    
                    <input type="password" id="password-input" name="password" placeholder="Password">
                </div>
                  
                    <button class="log-button" id="userlogin" type="submit">Log In</button>    
            </form>
            <form action="/user/singup">
                <div class="right-text">
                    <a href="/forgotpassword/sendmail"><p>Forgotten password?</p></a>
                    <hr>
                    <button class="btn-1" type="submit">Create New Account</button>
                    <p><a href="/user/auth/google"><i class="icon uil uil-google"></i></a></p>
                </div>
            </form> 
        </div>
    </div>
    <p class="extra-text"><b>Create a Page</b> for a celebrity, brand or business.</p>
</main>

